gris-claro = #EAEAEA
gris-oscuro = #333
rojo-quimec = #E60000
blanco = #FFFFFF
rojo-trabajo = #FA5868

.container-fluid
	header
		.fila-datos
			background gris-claro
			height 60px
			.datos
				margin-top 20px
				margin-bottom 20px
				.elemento-dato
					display inline
					a
						vertical-align middle
						.icon
							color gris-oscuro
							font-size 18px
							background blanco
							border-radius 50%
							padding 8px
							
						span
							color gris-oscuro
							font-size 13px
					.icon
						color rojo-quimec
						font-size 18px
						background blanco
						border-radius 50%
						padding 8px
						
					span
						color gris-oscuro
						font-size 13px
		.row-nav
			nav
				.container-fluid
					background blanco
					.navbar-header
						img
							width 200px
							height 55px
					.navbar-collapse
						background blanco !important
						img
							width 200px
							height 55px
						ul
							float right
							margin-top 8px
							padding-bottom 8px
							li
								text-align center
							li:nth-child(3)
								border-left 1px solid gris-claro
							li:nth-child(4)
								border-left 1px solid gris-claro
							li:nth-child(5)
								border-left 1px solid gris-claro
	.row-slide
		div
			padding 0
			.carousel
				.carousel-inner
					.item
						.img-responsive
							width 100%
							min-width 800px
							height 350px
						.carousel-caption
							bottom 70px
							h3
								font-size 20px
							p
								font-size 15px
	.row-interesa
		.interesa
			background gris-claro
			height 90px
			box-shadow 2px 2px 3px #6E6E6E
			div

				margin-top 20px
				span
					color gris-oscuro
					line-height 1.2
			.contacto
				text-align center
				padding 0
				
				
				div
					margin 0 !important
					span
						font-size 15px
						color #000
					.icon
						margin-left 10px
						color blanco
						padding 10px
						border-radius 50%
						background rojo-quimec
	.row-servicios
		div
			text-align center
			.servicios-elementos
				.servicio-elemento
					margin-bottom 15px
					text-align center
					img
						width 90%
						height 90%
					h4
						width 90%
						margin 0
						margin-left 5%
						border-top 6px solid rojo-quimec
	.row-proyectos
		text-align center
		background gris-oscuro
		border-bottom 5px solid rojo-quimec
		div
			padding 0
			.proyectos-titulo
				box-shadow 0px 1px 5px #000
				margin-bottom 15px
				height 90px
				h2
					margin 0
					color blanco
					font-weight 200
					padding-top 25px
			.proyectos-imagenes
				text-align center
				.proyecto-imagen
					display inline-flex
					height 215px
					margin 0
					img
						width 100%
	.row-slide-proyectos
		.proyectos-titulo
			text-align center
			box-shadow 0px 1px 5px #000
			height 90px
			background gris-oscuro
			margin-bottom 3px
			h2
				margin 0
				color blanco
				font-weight 200
				padding-top 25px
		.item
			img
				width 100%
				height 305px
				border-bottom 5px solid rojo-quimec
	.row-trabajamos
		.trabajamos-contenido
			text-align center
			h3
				text-align left
				color rojo-quimec
				font-size 23px
				margin-bottom 30px
				border-bottom 3px solid gris-claro
				padding-bottom 10px
			ul
				list-style none
				li
					background rojo-trabajo
					box-shadow 2px 2px 3px #2E3E3E
					height 205px
					margin-bottom 15px
					display inline-block
					
					img
						margin-top 15px
						width 71px
						height 66px
					p
						margin-top 20px
						color blanco
						font-weight 500
						font-size 14px

				.plus-li
					color rojo-quimec
					font-size 40px
					background none
					box-shadow none
					
					span
						position absolute
						margin-top 70px
						margin-left -17px
	.row-proveedores
		.proveedores-contenido
			text-align center
			h3
				text-align left
				color rojo-quimec
				font-size 23px
				margin-bottom 30px
				border-bottom 3px solid gris-claro
				padding-bottom 10px
			ul
				list-style none
				li
					display inline
					margin 0
					vertical-align middle
					padding 5px
					img
						margin-top 40px
						height 50%				
	footer
		.row-footer
			background gris-claro			
			text-align center
			.footer-top
				margin-top 15px
				div
					text-align left
					h4
						width 70%
						font-size 17px
						font-weight 900
						padding-bottom 15px	
						border-bottom 1px solid #A4A4A4
						span
							padding-bottom 15px	
							border-bottom 4px solid rojo-quimec
					img
						width 50%
					p
						width 70%
						font-size 14px
					ul
						list-style none
						padding-left 0
						li
							margin-bottom 7px
							a
								color rojo-trabajo
							.icon
								background rojo-quimec
								color blanco
								border-radius 50%
								padding 5px
				.footer-bottom
					background gris-oscuro
					height 50px
					span
						margin-top 20px
						float right
						color blanco

		
		
@media(min-width:768px)
	.cotizacion
		font-size 30px
	.proveedores-contenido
		ul
			li
				height 180px
				img
					width 50%
			li:nth-child(1)
				border-bottom 2px solid gris-claro
				border-right 2px solid gris-claro
			li:nth-child(2)
				border-bottom 2px solid gris-claro
				border-right 2px solid gris-claro
			li:nth-child(3)
				border-bottom 2px solid gris-claro
			li:nth-child(4)
				border-right 2px solid gris-claro
			li:nth-child(5)
				border-right 2px solid gris-claro

		
				
@media(max-width:768px)
	.cotizacion
		font-size 18px
	.navbar-collapse
		ul
			li:nth-child(3)
				border-left none !important
			li:nth-child(4)
				border-left none !important
			li:nth-child(5)
				border-left none !important	
	.proveedores-contenido
		ul
			li
				height 120px
				img
					width 100%

				
@media (max-width: 300px)
	.elemento-dato
		padding 0 !important
		

@media (max-width: 590px)
	.elemento-dato-correo
		display none !important
	.elemento-dato
		width 50% !important